<?php $__env->startSection('quiz'); ?>
	<ul class="nav nav-tabs nav-stacked col-md-2 col-sm-2">
	<?php $count = 0; ?>
	<?php foreach(App\User::getCourses(Auth::user()->id) as $course): ?>
		<?php if($count == 0): ?>
		<li role="presentation" class="active"><a href="#quiz_<?php echo e($course->name); ?>" aria-controls="<?php echo e($course->name); ?>" role="tab" data-toggle="tab"><?php echo e($course->name); ?></a></li>
		<?php else: ?>
		<li role="presentation" ><a href="#quiz_<?php echo e($course->name); ?>" aria-controls="<?php echo e($course->name); ?>" role="tab" data-toggle="tab"><?php echo e($course->name); ?></a></li>
		<?php endif; ?>
		<?php $count++; ?>
	<?php endforeach; ?>
	</ul>
	<div class="tab-content col-md-10 col-sm-10 ">
		<?php $quizCount = 0; ?>
		<?php foreach(App\User::getCourses(Auth::user()->id) as $course): ?>
			<div role="tabpanel" class="tab-pane <?php if ($quizCount==0): echo 'active'?><?php endif ?>" id="quiz_<?php echo e($course->name); ?>">
				<?php $quizCount = 1; ?>
				<?php if($course->quizzes()->count() != 0): ?>
					<table class="table table-striped">
						<thead>
							<th>#</th>
							<th>Name</th>
							<th>Time Length</th>
							<th># of Questions</th>
							<th>Start Date</th>
							<th>End Date</th>
						</thead>
						<tbody>
							<?php foreach($course->quizzes()->get() as $quiz): ?>
								<tr>
									<td><?php echo e($quizCount++); ?></td>
						 			<td><a href="#<?php echo e($quiz->id); ?>" aria-controls="<?php echo e($quiz->id); ?>" role="tab" data-toggle="tab"><?php echo e($quiz->description); ?></a></td>
									<td><?php echo e($quiz->quizTime); ?></td>
									<td><?php echo e($quiz->questions()->count()); ?></td>
									<td><?php echo e($quiz->startDate); ?></td>
									<td><?php echo e($quiz->endDate); ?></td>
								</tr>
							<?php endforeach; ?>
						</tbody>
					</table>
				<?php else: ?>
					<p>No quizzes for this class</p>
				<?php endif; ?>
			</div>
		<?php endforeach; ?>
	</div>
<?php echo $__env->yieldSection(); ?>