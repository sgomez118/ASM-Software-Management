<?php $__env->startSection('course'); ?>
	<ul class="nav nav-tabs nav-stacked col-md-2 col-sm-2">
	<?php $count = 0; ?>
	<?php foreach(App\User::getCourses(Auth::user()->id) as $course): ?>
		<?php if($count++ == 0): ?>
		<li role="presentation" class="active"><a href="#<?php echo e($course->name); ?>" aria-controls="<?php echo e($course->name); ?>" role="tab" data-toggle="tab"><?php echo e($course->name); ?></a></li>
		<?php else: ?>
		<li role="presentation" ><a href="#<?php echo e($course->name); ?>" aria-controls="<?php echo e($course->name); ?>" role="tab" data-toggle="tab"><?php echo e($course->name); ?></a></li>
		<?php endif; ?>
		
	<?php endforeach; ?>
	</ul>
	<div class="tab-content col-md-10 col-sm-10 ">
		<?php $studentCount = 0; ?>
		<?php foreach(App\User::getCourses(Auth::user()->id) as $course): ?>
		<div role="tabpanel" class="tab-pane <?php if ($studentCount == 0): echo 'active'?><?php endif ?>" id="<?php echo e($course->name); ?>">
			<?php $studentCount = 1; ?>
			<?php if($course->users()->count() != 0): ?>
				<table class="table table-striped">
					<thead>
						<th>#</th>
						<th>Name</th>
						<th>Email</th>
						<th>Grade</th>
					</thead>
					<tbody>
						<?php foreach($course->users as $student): ?>
						<tr>
							<td><?php echo e($studentCount++); ?></td>
				 			<td><a href="#<?php echo e($student->name); ?>" aria-controls="<?php echo e($student->name); ?>" role="tab" data-toggle="tab"><?php echo e($student->name); ?></a></td>
							<td><?php echo e($student->email); ?></td>
							<td>A</td>
						
						</tr>
						<?php endforeach; ?>
					</tbody>
				</table>
			<?php else: ?>
				<p>No students for assigned to this class.</p>
			<?php endif; ?>
		</div>
		<?php endforeach; ?>
	</div>

<?php echo $__env->yieldSection(); ?>