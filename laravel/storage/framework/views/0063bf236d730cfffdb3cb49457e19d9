    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <?php echo e($question->prompt); ?>

      </div>
      <div class="panel-body">
        <?php foreach($question->answers as $answer): ?>
          <label><input type="checkbox" name='<?php echo e($answer->pivot->id); ?>' class="answers">  <?php echo e($answer->text); ?></label>
          <br>
        <?php endforeach; ?>
      </div>   
    </div> <?php /* end panel */ ?>
    <?php endforeach; ?>

    <div class="row">
      <?php echo $questions->render(); ?>

    </div>

    <div class="form-group">
      <div class="col-md-6">
        <?php echo Form::submit('Submit', array('class' => 'btn btn-primary'));; ?>

      </div>
    </div>
    <?php echo Form::close(); ?>

<?php $__env->stopSection(); ?>
