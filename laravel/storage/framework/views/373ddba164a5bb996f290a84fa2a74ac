
<?php /* View Courses */ ?>

<html>
    <body>
        <div class="container">
            <div class="content">
                <H1>The Courses</H1>
                <!-- 
                    Iterates through the questions passed by the routes. 
                    Prints the prompt, difficulty and all the answers. 

                    foreach - laravel special function for blade
                    /{/{/}/} - equivalent of php echo. 
                        Note: there are others that can be used.
                -->
                <?php foreach($courses as $course): ?>
                    Name: <?php echo e($course->name); ?> <br>
                    Term: <?php echo e($course->term); ?> <br>
                    Lecturer ID: <?php echo e($course->lecturer_id); ?> <br>
                    <br>
                <?php endforeach; ?>
            </div>
        </div>
    </body>
</html>






